<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eueh.yohonow.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fmly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"/>

    <RadioGroup
        android:background="@color/coloBlack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:id="@+id/rbtn_recommend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_recmend"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rbtn_column"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_coiumn"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rbtn_community"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_community"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rbtn_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_video"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rbtn_magazine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/select_magazine"
            android:button="@null" />
    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linerlayout_main_draw"
        android:layout_width="296dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/coloBlack"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_main_login"
            android:layout_width="110dp"
            android:layout_height="170dp"
            android:layout_marginLeft="94dp"
            android:layout_marginTop="66dp"
            android:src="@mipmap/recommend_draw_my_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="我的收藏"
            android:textColor="@color/coloWhite"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="我的杂志"
            android:textColor="@color/coloWhite"
            android:textSize="15dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="我的提问"
            android:textColor="@color/coloWhite"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="97dp"
                android:src="@mipmap/mian_feedback" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="88dp"
                android:src="@mipmap/main_evaluation" />

            <ImageView
                android:id="@+id/iv_set"
                android:layout_width="78dp"
                android:layout_height="73dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="96dp"
                android:src="@mipmap/main_settings" />


        </LinearLayout>


    </LinearLayout>




</android.support.v4.widget.DrawerLayout>
