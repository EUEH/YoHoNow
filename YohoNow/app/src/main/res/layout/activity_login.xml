<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    tools:context="com.eueh.yohonow.LoginActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_image_close_close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="18dp"
            android:background="@mipmap/closelogone" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:background="@mipmap/yohologme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textColor="@color/coloWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yoho!Family账号可登陆Yoho!Now"/>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColorHint="#808080"
                    android:hint="手机号/邮箱"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/shape_edittext"
                    android:drawableLeft="@mipmap/yohologlefnew"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColorHint="#808080"

                    android:hint="密码"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/shape_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" />

            </LinearLayout>
            <Button
                android:layout_marginTop="15dp"
                android:text="登陆"
                android:textColor="@color/coloWhite"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textColor="#808080"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="忘记密码"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <ImageView
                        android:layout_marginLeft="90dp"
                        android:gravity="center"
                        android:background="@mipmap/loginfirst"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:background="@mipmap/loginsecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="16dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <ImageView
                        android:id="@+id/iv_check_dot"
                        android:clickable="true"
                        android:background="@mipmap/loginthird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/iv_check_qq"
                        android:visibility="gone"
                        android:clickable="true"
                        android:background="@mipmap/loginfour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_check_f"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView

                        android:layout_marginLeft="88dp"
                        android:gravity="center"
                        android:background="@mipmap/loginfive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <ImageView
                        android:clickable="true"
                        android:id="@+id/iv_check_close"
                        android:background="@mipmap/loginsix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_check_inter"
                android:textSize="16sp"
                android:textColor="#808080"
                android:gravity="center"
                android:text="International Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textColor="#808080"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="注册Yoho!Family"/>

        </LinearLayout>



    </ScrollView>





</LinearLayout>
