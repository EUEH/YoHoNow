<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rec_item_two_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="13"
            android:background="@color/coloWhite"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3.7"
            android:background="@color/coloWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rec_item_two_tv_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="我试看看积分开会那几款是无法弄完姐姐我jewiojfiojdjos服务费的收费的多少分" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rec_item_two_tv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#时尚" />

                <TextView
                    android:id="@+id/rec_item_two_tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="11.23.2016" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>